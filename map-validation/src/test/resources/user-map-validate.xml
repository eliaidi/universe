<?xml version="1.0" encoding="UTF-8"?>

<validate-mapper name="user">

    <key name="username" alias="登录帐号">
        <required />
        <re value="^[a-zA-z][a-zA-Z0-9_]{2,9}$"/>
        <eq to="nickname" />
        <neq to="password" />
        <length min="6" max="16" />
    </key>

    <key name="email" alias="电子邮件">
        <email/>
        <length max="64" />
    </key>

    <key name="password" alias="登录密码">
        <required />
        <length min="6" max="16" />
    </key>

    <key name="nickname" alias="昵称">
        <required />
        <length max="16" />
    </key>

    <key name="state" alias="状态">
        <required />
        <number />
        <max value="2"/>
        <min value="0" />
        <between min="0" max="2" />
    </key>

    <key name="brithday" alias="出生年月">
        <required />
        <date />
        <between min="2015-02-05" max="2015-02-06" />
    </key>

</validate-mapper>